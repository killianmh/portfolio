<div>
    {{#each project}}
        <div class="modal fade" id="project-modal-{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                  <div class="modal-content" id="k-override">
                    <div class="modal-header">
                      <h5 class="modal-title modal-text" id="exampleModalLabel">{{name}}</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <div class="container-fluid">
                        <div class="row">
                          <div id="modalCarousel-{{id}}" class="col carousel slide" data-ride="carousel">
                            <div class="carousel-inner" id="modal-carousel">
                                <div class="carousel-item active">
                                  <img class="d-block w-100" src="{{carouselImage1}}" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                  <img class="d-block w-100" src="{{carouselImage2}}" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                  <img class="d-block w-100" src="{{carouselImage3}}" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#modalCarousel-{{id}}" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#modalCarousel-{{id}}" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                        </div>
                        <div class="row mt-3 modal-text">
                          <div class="col description">
                            
                              {{description}}
                            
                              <p>
                                Technologies:
                              </p>
                              <ul>
                                {{#each technologies}}
                                  <li>
                                    &bull; {{this}}
                                  </li>
                                {{/each}}
                              </ul>
                            
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <a href="{{url}}" target="_blank">
                        <button type="button" class="overlay-btn">Visit Site</button>
                      </a>
                      <button type="button" class="overlay-btn" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
        </div>
    {{/each}}
</div>